- provide :title, "All Artist"
.row
  .four.columns
    %h3= "Artists"
    = render "artist", :object => @artists
  .eight.columns#post_form
    = form_for @artist, :remote => true do |f|
      = f.label :name, "Artist Name"
      = f.text_field :name
      = f.label :bio, "Bio"
      = f.text_area :bio
      = f.submit "Submit", :class => "button"
    